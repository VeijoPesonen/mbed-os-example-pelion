{
    "macros": [
        "MBED_TRACE_MAX_LEVEL=TRACE_LEVEL_INFO",
        "MBED_CLIENT_USER_CONFIG_FILE=\"mbed_cloud_client_user_config.h\"",
        "MBED_CLOUD_CLIENT_USER_CONFIG_FILE=\"mbed_cloud_client_user_config.h\"",
        "ARM_UC_USE_PAL_BLOCKDEVICE=1",
        "PAL_PLATFORM_DEFINED_CONFIGURATION=\"mbedOS_SST.h\"",
        "PAL_USER_DEFINED_CONFIGURATION=\"mbedOS_SST.h\""
    ],
    "target_overrides": {
        "*": {
            "mbed-trace.enable": true,
            "mbed-trace.max-level": "TRACE_LEVEL_WARN",
            "target.components_add"                     : ["SD"],
            "target.features_add"                       : ["BOOTLOADER", "STORAGE"],
            "platform.stdio-baud-rate"                  : 115200,
            "platform.stdio-convert-newlines"           : true,
            "platform.stdio-buffered-serial"            : true,
            "rtos.main-thread-stack-size"               : 5120,
            "update-client.storage-locations"           : 1,
            "update-client.storage-page"                : 1,
            "events.shared-stacksize"                   : 2048,
            "target.network-default-interface-type"     : "WIFI",
            "nsapi.default-wifi-security"               : "WPA_WPA2",
            "nsapi.default-wifi-ssid"                   : "\"SSID\"",
            "nsapi.default-wifi-password"               : "\"PASSWORD\"",
            "target.macros_remove"                      : ["MBEDTLS_CONFIG_HW_SUPPORT"],
            "target.macros_add"                         : ["MBEDTLS_USER_CONFIG_FILE=\"mbedTLSConfig_mbedOS.h\""],
            "storage.storage_type"                      : "TDB_EXTERNAL",
            "storage_tdb_external.internal_base_address": "(MBED_ROM_START + MBED_BOOTLOADER_SIZE)",
            "storage_tdb_external.rbp_internal_size"    : "(2*4*1024)",
            "storage_tdb_external.external_size"        : "(128*1024)",
            "storage_tdb_external.external_base_address": "(0)",
            "mbed-cloud-client.update-storage"          : "ARM_UCP_FLASHIAP_BLOCKDEVICE",
            "update-client.application-details"         : "(MBED_CONF_STORAGE_TDB_EXTERNAL_INTERNAL_BASE_ADDRESS + MBED_CONF_STORAGE_TDB_EXTERNAL_RBP_INTERNAL_SIZE)",
            "update-client.storage-address"             : "(MBED_CONF_STORAGE_TDB_EXTERNAL_EXTERNAL_BASE_ADDRESS + MBED_CONF_STORAGE_TDB_EXTERNAL_EXTERNAL_SIZE)",
            "update-client.storage-size"                : "((MBED_ROM_START + MBED_ROM_SIZE - APPLICATION_ADDR) * MBED_CONF_UPDATE_CLIENT_STORAGE_LOCATIONS)"            
        },
        "NRF52840_DK": {
            "target.bootloader_img"     : "bootloader/NRF52840_DK.hex",
            "target.extra_labels_remove": ["NORDIC_CORDIO", "CORDIO", "CORDIO_LL"],
            "target.features_remove"    : ["CRYPTOCELL310", "BLE"],
            "target.macros_add"         : ["NRFX_RNG_ENABLED=1", "RNG_ENABLED=1", "NRF_QUEUE_ENABLED=1"],
            "bootloader-size"           : "(0x9000)",
            "target.header_offset"      : "0xB000",
            "target.app_offset"         : "0xB400",
            "target.restrict_size"      : "0xf4c00",
            "sd.SPI_MISO"               : "SPI_PSELMISO0",
            "sd.SPI_MOSI"               : "SPI_PSELMOSI0",
            "sd.SPI_CLK"                : "SPI_PSELSCK0",
            "sd.SPI_CS"                 : "SPI_PSELSS0",
            "esp8266.provide-default"   : true,
            "esp8266.rst"               : "D8",
            "esp8266.rts"               : "D2",
            "esp8266.cts"               : "D3"
        },
        "DISCO_L475VG_IOT01A": {
            "target.components_add": ["WIFI_ISM43362"],
            "target.bootloader_img": "bootloader/DISCO_L475VG_IOT01A.bin",
            "bootloader-size"      : "(0xa000)",
            "target.header_offset" : "0xc000",
            "target.app_offset"    : "0xc400"
        }
    },
    "config": {
        "bootloader-size": {
            "help"      : "Helper macro to enable calculation of rom regions. target.header_offset and target.app_offset still needs to be calculated manually, though.",
            "value"     : "(32*1024)",
            "macro_name": "MBED_BOOTLOADER_SIZE"
        },
        "run-ci": {
            "help"           : "Configuration item to control the level of CI verification. 0 = ignored, 1 = build-only, 2 = build + E2E tests",
            "accepted_values": [0, 1, 2],
            "value"          : 1
        }
    }
}
